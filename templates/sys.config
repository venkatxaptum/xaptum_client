[%% LAGER Config
  {lager, [
    {log_root, "/var/log/xaptum"},
    {handlers, [
      {lager_console_backend, [{level, {{lager_log_level}} }]},
      {lager_file_backend, [{file, "{{ node_name }}_info.log"}, {level, {{lager_log_level}}},
        {size, 10485760}, {date, "$D0"}, {count, 5}]}
    ]},
%% Any other sinks
          {extra_sinks,
           [
            {log_lager_event,
             [{handlers,
               [{lager_file_backend,
                 [{file, "{{node_name}}.log"},
                  {level, {{lager_log_level}}},
		  {size, 10485760}, {date, "$D0"}, {count, 5},
		  {formatter, lager_default_formatter},
		  {formatter_config, [date, " ", time," [",severity,"] ", message, "\n"]}
                 ]
                }]
              },
              {async_threshold, 500},
              {async_threshold_window, 50}]
            }]
          }
  ]},

  {
    enfddsc, [
	      {xaptum_host, "{{ xaptum_host }}" },
	      {xaptum_port, {{xaptum_port}} },
	      {local_ip, "{{ local_ip }}" },
	      {type, {{ type }} },
	      {message_handler, {{ message_handler }} },
	      
	      {cert_file, "{{cert_file}}"},
	      {key_file, "{{key_file}}"},
	      {dds_queue, "{{dds_queue}}"},
	      {stat_port, {{stat_port}} },
	      {ipv6_file, "{{ipv6_file}}"}
	      
	     ]
  }
].
